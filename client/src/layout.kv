<Menu>:
    cols: 2
    adaptive_height: True

    MDRectangleFlatIconButton:
        text: "Home"
        icon: "home"
        size_hint_x: 1.0
        line_color: 0, 0, 0, 0
        theme_icon_color: "Custom"
        text_color: app.theme_cls.primary_color if self.parent.illuminated_button_index == 0 else app.theme_cls.text_color
        icon_color: app.theme_cls.primary_color if self.parent.illuminated_button_index == 0 else app.theme_cls.text_color

        on_release:
            app.root.ids.home_screen.load()
            self.parent.illuminated_button_index = 0
            app.root.ids.screen_manager.current = "home_screen"
            app.root.ids.screen_manager.transition.direction = "right"

    MDRectangleFlatIconButton:
        text: "Explore"
        icon: "compass"
        size_hint_x: 1.0
        line_color: 0, 0, 0, 0
        theme_icon_color: "Custom"
        text_color: app.theme_cls.primary_color if self.parent.illuminated_button_index == 1 else app.theme_cls.text_color
        icon_color: app.theme_cls.primary_color if self.parent.illuminated_button_index == 1 else app.theme_cls.text_color

        on_release:
            app.root.ids.explore_screen.load()
            self.parent.illuminated_button_index = 1
            app.root.ids.screen_manager.current = "explore_screen"
            app.root.ids.screen_manager.transition.direction = "left"

RootLayout:
    orientation: "vertical"

    MDScreenManager:
        id: screen_manager

        SignInScreen:
            id: sign_in_screen
            name: "sign_in_screen"

        SignUpScreen:
            id: sign_up_screen
            name: "sign_up_screen"

        HomeScreen:
            id: home_screen
            name: "home_screen"

        ExploreScreen:
            id: explore_screen
            name: "explore_screen"

        HobbyScreen:
            id: hobby_screen
            name: "hobby_screen"

        ModuleScreen:
            id: module_screen
            name: "module_screen"

        UnitScreen:
            id: unit_screen
            name: "unit_screen"

<SignInScreen>
    MDBoxLayout:
        orientation: "vertical"
        padding: app.default_margin
        spacing: app.default_margin * 2

        AsyncImage:
            fit_mode: "contain"
            source: "logo.png"

        MDLabel:
            text: "Hotopia"
            font_size: dp(40)
            adaptive_size: True

        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"

            MDLabel:
                text: "Account name"

            AccountTextField:
                id: account_name_input
                max_text_length: 255
                on_text: self.validate()
                helper_text_mode: "on_error"
                helper_text: "Only English letters and digit. Starts with a letter"

        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"

            MDLabel:
                text: "Password"

            PasswordTextField:
                id: password_input
                password: True
                password_mask: '•'
                max_text_length: 255
                helper_text: "Not empty"
                on_text: self.validate()
                helper_text_mode: "on_error"

        MDRectangleFlatButton:
            text: "Log in"
            size_hint_x: 1.0

            on_release:
                app.root.ids.sign_in_screen.sign_in()

        MDGridLayout:
            rows: 2
            cols: 2
            adaptive_height: True
            spacing: app.default_margin

            MDLabel:
                text: "Don’t have an account?"

            MDRectangleFlatButton:
                size_hint_x: 1.0
                text: "Create a new account"

                on_release:
                    app.root.ids.screen_manager.current = "sign_up_screen"
                    app.root.ids.screen_manager.transition.direction = "left"

            MDLabel:
                text: "Forgot your password?"

            MDRectangleFlatButton:
                size_hint_x: 1.0
                text: "Reset password"

<SignUpScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: app.default_margin
        spacing: app.default_margin * 2

        AsyncImage:
            fit_mode: "contain"
            source: "logo.png"

        MDLabel:
            text: "Hotopia"
            font_size: dp(40)
            adaptive_size: True

        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"

            MDLabel:
                text: "Email address"

            MDTextField:
                id: email_input

        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"

            MDLabel:
                text: "Account name"

            MDTextField:
                id: account_name_input

        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"

            MDLabel:
                text: "Password"

            MDTextField:
                id: password_input
                password: True
                password_mask: '•'

        MDRectangleFlatButton:
            size_hint_x: 1.0
            text: "Create a new account"

            on_release:
                app.root.ids.sign_up_screen.sign_up()

        MDGridLayout:
            cols: 2
            adaptive_height: True
            spacing: app.default_margin

            MDLabel:
                align: "center"
                text: "Already have an account?"

            MDRectangleFlatButton:
                size_hint_x: 1.0
                text: "Login to existing account"

                on_release:
                    app.root.ids.screen_manager.current = "sign_in_screen"
                    app.root.ids.screen_manager.transition.direction = "right"

<HomeHobbyCard>:
    adaptive_height: True
    orientation: "vertical"

    on_release:
        app.root.menu.illuminated_button_index = 1
        app.root.ids.hobby_screen.load(self.item_id)
        app.root.ids.screen_manager.current = "hobby_screen"
        app.root.ids.screen_manager.transition.direction = "left"

    canvas:
        Color:
            rgb: app.theme_cls.bg_dark
        RoundedRectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        adaptive_height: True
        text: self.parent.title
        padding: app.default_margin

<HomeScreen>:
    MDScrollView:
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            padding: app.default_margin
            spacing: app.default_margin

            MDLabel:
                text: "In progress"
                adaptive_height: True

            MDBoxLayout:
                id: in_progress_hobbies
                adaptive_height: True
                orientation: "vertical"

            MDLabel:
                text: "Latest"
                adaptive_height: True

            MDBoxLayout:
                id: latest_hobbies
                adaptive_height: True
                orientation: "vertical"

<HobbyCard>:
    adaptive_height: True
    orientation: "vertical"


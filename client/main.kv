ViewManager:
    SignInView
    SignUpView
    Home
    Explore
    Profile

<SignInView>:
    name: "sign_in_view"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Account name"

        TextInput:
            multiline: False

        Label:
            text: "Password"

        TextInput:
            multiline: False

        Button:
            text: "Log in"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"

        GridLayout:
            rows: 2
            cols: 2

            Label:
                text: "Donâ€™t have an account?"

            Button:
                text: "Create a new account"
                on_release:
                    app.root.current = "sign_up_view"
                    root.manager.transition.direction = "left"

            Label:
                text: "Forgot your password?"

            Button:
                text: "Reset password"

<SignUpView>:
    name: "sign_up_view"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Email address"

        TextInput:
            multiline: False

        Label:
            text: "Account name"

        TextInput:
            multiline: False

        Label:
            text: "Password"

        TextInput:
            multiline: False

        Button:
            text: "Create a new account"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "up"

        GridLayout:
            cols: 2

            Label:
                text: "Already have an account?"

            Button:
                text: "Login to existing account"
                on_release:
                    app.root.current = "sign_in_view"
                    root.manager.transition.direction = "right"

<Menu>:
    GridLayout:
        cols: 3

        Button:
            text: "Home"
            on_release:
                app.root.current = "home"

        Button:
            text: "Explore"
            on_release:
                app.root.current = "explore"

        Button:
            text: "Profile"
            on_release:
                app.root.current = "profile"

<Home>:
    name: "home"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Home"

        Menu

<Explore>:
    name: "explore"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Explore"

        Menu

<Profile>:
    name: "profile"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Profile"

        Menu

ViewManager:
    SignInView:
    SignUpView:

<SignInView>:
    name: "sign_in_view"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Account name"

        TextInput:
            multiline: False

        Label:
            text: "Password"

        GridLayout:
            rows: 2
            cols: 2

            Label:
                text: "Donâ€™t have an account?"

            Button:
                text: "Create a new account"
                on_release:
                    app.root.current = "sign_up_view"
                    root.manager.transition.direction = "left"

            Label:
                text: "Forgot your password?"

            Button:
                text: "Reset password"

<SignUpView>:
    name: "sign_up_view"

    GridLayout:
        cols: 2

        Label:
            text: "Already have an account?"

        Button:
            text: "Login to existing account"
            on_release:
                app.root.current = "sign_in_view"
                root.manager.transition.direction = "right"
